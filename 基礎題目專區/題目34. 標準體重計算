#include <iostream>
#include <iomanip>
#include <bits/stdc++.h>
using namespace std;

int main(){
    int x1, x2, y1, y2, i;
    string str, t;
    double y=0;
    
    while(cin >> x1 >> x2){
        y = 0;
        if(x2 == 1){
            y = (x1 - 80) * 0.7;
        }
        else if(x2 == 2){
            y = (x1 - 70) * 0.6;
        }
        cout << fixed  <<  setprecision(1) << y << endl;
    }
    return 0;
}
